<h3 class="traitsheet-header">
    <div>{{localize "EW.game_term.weapons"}}</div>
    <a class="item-create"
       title="Add Weapon"
       data-type="weapon">
        <i class="fas fa-plus-square"></i>
    </a>
</h3>
<table class="item-table">
    {{#each weapons as |weapon id|}}

    <tr>
        <td class="item-name item"
            data-item-id="{{weapon.id}}">
            <a class="weapon-roll weapon-image"
               title="Roll Damage"><img src="{{weapon.img}}"
                     height="24"
                     width="24" /></a>
            <a class="item-edit"
               title="Edit"><strong>{{weapon.name}}</strong></a>
            <br><em>{{localize weapon.data.data.wpn_type}},
                {{localize weapon.data.data.damage.dice}}
                {{#if (ne weapon.data.data.damage.add_attribute "none")}}
                +{{#if (eq weapon.data.data.damage.half_attribute true)}}
                &#189;
                {{/if}}
                {{setting (getCustomName weapon.data.data.damage.add_attribute)}}
                {{/if}}
                {{#if (ne weapon.data.data.damage.mod 0)}}
                +{{weapon.data.data.damage.mod}}
                {{/if}}
                , AP{{weapon.data.data.damage.ap}} {{#if (gt weapon.data.data.range 0)}}, Range
                {{weapon.data.data.range}}{{/if}}
                {{#if (setting "useScale")}}{{#if (ne weapon.data.data.damage.scale 1)}}, scale
                {{weapon.data.data.damage.scale}}{{/if}}{{/if}}</em>
        </td>
        <td style="right:100%;">
            <a class="item-delete item"
               data-item-id="{{weapon.id}}">
                <i class="fas fa-trash"></i>
            </a>
        </td>
    </tr>
    {{/each}}
</table>