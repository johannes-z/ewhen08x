<form class="{{cssClass}}"
      autocomplete="off">
    <header class="sheet-header">
        <img src="{{item.img}}"
             data-edit="img"
             title="{{item.name}}"
             height="64"
             width="64" />
        <h1><input name="name"
                   type="text"
                   value="{{item.name}}"
                   placeholder="Name" /></h1>
    </header>

    <div>
        <table>
            <tr>
                <th>{{localize "EW.game_term.armortype"}}</th>
                <th>{{localize "EW.game_term.era"}}</th>
            </tr>
            <tr>
                <td>
                    <select style="width:100%;"
                            name="data.armor_type"
                            id="data.armor_type">
                        {{#select data.armor_type}}
                        {{#each config.armor_types as |name type|}}
                        <option value="{{type}}">{{localize name}}</option>
                        {{/each}}
                        {{/select}}
                    </select>
                </td>
                {{> 'systems/ewhen/templates/partials/EraSelect.hbs'}}
            </tr>
        </table>
        <table>
            <tr>
                <th>{{localize "EW.armor.protection.fixedval"}}</th>
                <th>{{localize "EW.armor.protection.variable"}}</th>
                {{#if (setting "useScale")}}<th>{{localize "EW.game_term.scale"}}</th>{{/if}}
                <th>{{localize "EW.armor.protection.accessory"}}</th>
                <th>{{localize "EW.item.equipped"}}</th>
            </tr>
            <tr>
                <td>
                    <input class="ewhen statfield"
                           type="text"
                           name="data.protection.fixed"
                           value="{{data.protection.fixed}}"
                           data-dtype="Number" />
                </td>
                <td>
                    <select style="width:100%;"
                            name="data.protection.variable" />
                    {{#select data.protection.variable}}
                    <option value="none">{{localize "EW.game_term.none"}}</option>
                    <option value="1d6-3">1d6-3</option>
                    <option value="1d6-2">1d6-2</option>
                    <option value="1d6-1">1d6-1</option>
                    <option value="1d6">1d6</option>
                    {{/select}}
                </td>
                {{#if (setting "useScale")}}
                <td>
                    <input class="ewhen statfield"
                           type="text"
                           name="data.protection.scale"
                           value="{{data.protection.scale}}"
                           data-dtype="Number" />
                </td>
                {{/if}}
                <td class="align-center">
                    <input name="data.accessory"
                           type="checkbox"
                           {{checked
                           data.accessory}} />
                </td>
                <td class="align-center">
                    <input name="data.equipped"
                           type="checkbox"
                           {{checked
                           data.equipped}} />
                </td>
            </tr>
        </table>
        <table>
            <tr>
                <th colspan="2">
                    {{localize "EW.armor.armorbonuses"}}
                </th>
                <th colspan="2">
                    {{localize "EW.armor.armorpenalty"}}
                </th>
                <th>
                    {{localize "EW.armor.otherdiffmods"}}
                </th>
            </tr>
            <tr>
                <td>
                    <select name="data.bonus.to">
                        {{#select data.bonus.to}}
                        {{> "systems/ewhen/templates/partials/AttributeSelect.hbs"}}
                        {{/select}}
                    </select>
                </td>
                <td>
                    <input class="ewhen statfield"
                           type="text"
                           name="data.bonus.amount"
                           value="{{data.bonus.amount}}"
                           data-dtype="Number" />
                </td>
                <td>
                    <select name="data.penalty.to">
                        {{#select data.penalty.to}}
                        {{> "systems/ewhen/templates/partials/AttributeSelect.hbs"}}
                        {{/select}}
                    </select>
                </td>
                <td>
                    <input class="ewhen statfield"
                           type="text"
                           name="data.penalty.amount"
                           value="{{data.penalty.amount}}"
                           data-dtype="Number" />
                </td>
                <td>
                    <input type="text"
                           name="data.diffmod.to"
                           value="{{data.diffmod.to}}" />
                </td>

            </tr>
        </table>
    </div>
</form>