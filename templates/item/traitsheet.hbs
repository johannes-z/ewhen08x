<form class="{{cssClass}}"
      autocomplete="off">
    <header class="sheet-header">
        <img src="{{item.img}}"
             data-edit="img"
             title="{{item.name}}"
             height="64"
             width="64" />
        <h1><input name="name"
                   type="text"
                   value="{{item.name}}"
                   placeholder="Name" /></h1>
    </header>

    <div>
        <table>
            <tr>
                <th>{{localize "EW.game_term.trait_type"}}</th>
                <th>{{localize "EW.game_term.trait_source"}}</th>
                <th>{{localize "EW.game_term.primod"}}</th>
                <th>{{localize "EW.game_term.temporary"}}</th>

            </tr>
            <tr>
                <td style="text-align: center;">
                    <select style="width:100%;"
                            name="data.type"
                            id="data.type">
                        {{#select data.type}}
                        {{#each config.traitTypes as |name type|}}
                        <option value="{{type}}">{{localize name}}</option>
                        {{/each}}
                        {{/select}}
                    </select>
                </td>
                <td style="text-align: center;">
                    <select style="width:100%;"
                            name="data.source"
                            id="data.source">
                        {{#select data.source}}
                        {{#each config.traitSources as |name source|}}
                        <option value="{{source}}">{{localize name}}</option>
                        {{/each}}
                        {{/select}}
                    </select>
                </td>
                <td style="text-align:center;">
                    <select style="width:100%;"
                            name="data.priority_dieMod"
                            id="data.priority_dieMod">
                        {{#select data.priority_dieMod}}
                        <option value="none">{{localize "EW.game_term.none"}}</option>
                        <option value="bonus">{{localize "EW.game_term.bonusdie"}}</option>
                        <option value="penalty">{{localize "EW.game_term.penaltydie"}}</option>
                        {{/select}}
                    </select>
                </td>
                <td style="text-align: center;">
                    <input name="data.isTemporary"
                           type="checkbox"
                           {{checked
                           data.isTemporary}} />
                </td>
            </tr>
        </table>
        <hr>
        <h3>{{localize "EW.game_term.description"}}</h3>
        <textarea class="ewhen trait-desc"
                  id="description"
                  name="data.description">{{data.description}}</textarea>
    </div>
</form>